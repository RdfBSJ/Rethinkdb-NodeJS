extends ../layout.jade
block contenido

	div(class="row")
		div(class="col-lg-2")
		div(class="col-lg-8")
			h1 Lista de productos
			table(class="table table-hover table-striped table-bordered table-condensed")
				thead
					tr
						th Id-Db
						th Nombre
						th Descripcion
						th Precio
				tbody
					each producto in productos
						tr
							td= producto.id
							td= producto.Nombre
							td= producto.Descripcion
							td= producto.Precio
		div(class="col-lg-2")