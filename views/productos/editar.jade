extends ../layout.jade
block contenido

	div(class="row")
		div(class="col-lg-4")
		div(class="col-lg-4")
			h1 Editar producto
			form(method="POST" action="/editar/#{producto.id}?_method=put")
				div(class="form-group")
					label(for="nombre") Nombre:
					input(type="text" class="form-control" placeholder="Nombre" name="nombre" value="#{producto.Nombre}")
				div(class="form-group")
					label(for="descripcion") Descripción:
					textarea(class="form-control" placeholder="Descripcion" name="descripcion")= producto.Descripcion
				div(class="form-group")
					label(for="precio") Precio producto:
					input(type="number" class="form-control" placeholder="Precio" name="precio" value="#{producto.Precio}")
				div(class="form-group")
					label(for="clave") Contraseña usuario:
					input(type="password" class="form-control" placeholder="Contraseña" name="clave" value="#{producto.Clave}")
				button(type="submit" class="btn btn-primary pull-right") Guardar
		div(class="col-lg-4")