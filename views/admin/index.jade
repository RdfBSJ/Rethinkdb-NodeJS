extends ../layout.jade
block contenido

	div(class="row")
		div(class="col-lg-2")
		div(class="col-lg-8")
			h1 Panel de Administraci√≥n
			table(class="table table-hover table-striped table-bordered table-condensed")
				thead
					tr
						th Id-Db
						th Nombre
						th Descripcion
						th Precio
						th Acciones
				tbody
					each producto in productos
						tr
							td= producto.id
							td= producto.Nombre
							td= producto.Descripcion
							td= producto.Precio
							td
								a(href="/productos/editar/#{producto.id}") Editar
								=" - "
								a(href="/productos/borrar/#{producto.id}") Eliminar
		div(class="col-lg-2")